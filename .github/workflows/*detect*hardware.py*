python
import sys
sys.stdout.reconfigure(line*buffering=True)
import platform
import psutil
def detect*hardware():
    print("Hardware Detection Results:")
    print("---------------------------")
    print(f"CPU: {platform.processor()}")
    print(f"CPU Cores: {psutil.cpu*count(logical=False)}")
    print(f"CPU Threads: {psutil.cpu*count(logical=True)}")
    print(f"RAM: {psutil.virtual*memory().total / (1024.0 ** 3):.2f} GB")
    print(f"Operating System: {platform.system()} {platform.release()}")
detect*hardware()
